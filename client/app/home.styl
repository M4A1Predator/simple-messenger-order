
html body
    height 100%
    margin 0
    padding 0

input
    padding 0 5px
    border-radius 2px

input::placeholder
    padding 0 5px

.home
    width 100%
    height 100vh
    padding 15px 15px 0 15px
    .markerbox-container
        position absolute
        z-index 10
        width calc(100% - 35px)
        max-width 720px
        height 110px
        overflow-y auto
        .markerbox-box
            padding 0 0 0 0
            .option-box
                .option-icon
                    float right
                    margin 5px 40px 0 0
                    .icon
                        width 19px
                        height 19px
    
    .gmap
        margin 95px 0 0 0 
    
    .total-box
        display flex
        align-items center
        margin 5px 0 0 0
        .total-text
            font-size 20px
        .btn-container
            margin 0 0 0 5px
            button
                width 120px
                height 30px
                color #ffffff
                background-color #41985e
                border 1px #ffffff solid 
                border-radius 3px

    