.option-pop
    display: none
    position: fixed
    z-index: 100
    padding-top: 100px
    left: 0;
    top: 0;
    width: 100%
    height: 100%
    overflow: auto
    background-color: rgb(0,0,0)
    background-color: rgba(0,0,0,0.4)
    .popup-content
        margin auto
        width 290px
        height 300px
        padding 10px
        background-color #ffffff
        border solid 1px #d6d6d6
        .head
            font-weight 600
        
        .choice-box
            padding 10px
            .choice
                display flex
                justify-content space-between
                margin 0 0 15px 0
                img
                    width 30px
                    height 30px
        
        .buttom-box
            text-align center
            button
                width 150px
                height 30px
                color #ffffff
                background-color #41985e
                border 1px #ffffff solid 
                border-radius 3px
