
.order-detail
    width 100%
.container
    display table
    @media(min-width 960px)
        width 960px

    .destination-container
        padding 5px 5px
    
    .option-box
        .head
            display flex
            margin 15px 0 0 0
            .head-text
                margin 0 10px 0 0
            .icon
                cursor pointer
                img
                    width 20px
                    height 20px
        
        .selected-option-box
            display flex
            height 90px
            .option-icon
                margin 20px 15px 0 0
                img
                    width 30px
                    height 30px
    
    .detail-box
        margin 50px 0 0 0
        .text-container
            display flex
            justify-content space-between
            .head-text
                font-size 22px
            .sum
                font-size 22px
                font-weight 600

    .button-box
        text-align center
        .back-btn
            width 90px
            height 30px
            color #000000
            background-color #ffffff
            border 1px #000000 solid 
            border-radius 3px
            margin 0 10px 0 0
        .confirm-btn
            width 150px
            height 30px
            color #ffffff
            background-color #41985e
            border 1px #000000 solid 
            border-radius 3px